extends ../layouts/common

block content
   h2= book.title
   if err 
      div= err
   img(src= book.coverImagePath widht="100" height="150")
   div= `Author: ${book.author.name}`
   div= `Publish Date: ${book.publishDate.toDateString()}`
   div= `Page Count: ${book.pageCount}`
   div= `Description: ${book.description}`

   a(href=`/books/${book._id}/edit`) Edit
   form(method="POST" action="/books/" + book._id + "?_method=DELETE")
      button(type="submit") Delete
   a(href=`/authors/${book.author._id}`) View author
