extends ../layouts/common

block content
   h1 all authors
   
   form(action="/authors" method="GET")
      .form-group
         label(for="name") Name
         input.form-control(type="text", name="name" value= searchOptions.name || '')
      button.btn.btn-primary(type="submit") Search

   br
   each author in authors
      div= author.name

