extends ../layouts/common

block content
   h2.page-header New author

   if error
      div= error
   form(action="/authors" method="POST")
      .form-row
         .form-item
            label(for="name") Name
            input(type="text" name="name" value= author.name placeholder="Name") 
      .btn-row.form-row.form-row-end
         a.btn.btn-danger(href="/authors") Cancel
         button.btn.btn-primary(type="submit") Create